{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"noUnusedParameters": false
	},
	"include": ["src/**/*.ts", "src/bin/www"],
	"exclude": ["node_modules", "logs", "tests"]
}
  
  