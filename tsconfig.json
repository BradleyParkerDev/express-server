{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".", // ðŸ‘ˆ Enables path aliases
    "paths": {
		"@":["./*"],
		"@server/*": ["server/src/*"]
    },
    "rootDir": "./server",         // Your source root
    "outDir": "server/dist",       // Compiled output
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./server/src/types"],
    "noUnusedParameters": false
  },
  "include": [
    "server/src/**/*.ts",
    "server/src/bin/www"
  ],
  "exclude": ["node_modules", "logs", "tests", "server/dist"]
}
